<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:background="@color/edit_bg"
    android:backgroundTint="@color/white"

    xmlns:app="http://schemas.android.com/apk/res-auto"


    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="@color/lightGray"
    android:elevation="7dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



    <TextView
        android:padding="5dp"
        android:background="@color/sky_blue"
       android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="Additional Details"
        android:textColor="@color/textColor"
        android:textSize="20sp"
        android:fontFamily="@font/montserrat_bold"
        android:textStyle="normal" />


    <TextView
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Company Name"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="@color/textColor"
        android:textSize="14sp"
        android:textStyle="normal" />

    <EditText
        android:id="@+id/edtCompanyName"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/edit_text_bg_fixhigth"
        android:fontFamily="@font/montserrat_regular"
        android:hint="Select"
        android:paddingStart="10dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:drawableEnd="@drawable/ic_arrow_down"
        android:editable="false"
        android:focusable="false"
        android:paddingEnd="20dp"/>


    <TextView
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/montserrat_regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Company Address"
        android:textColor="@color/textColor"
        android:textSize="14sp"
        android:textStyle="normal"
        />

    <EditText
        android:id="@+id/edtAddress"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="@drawable/edit_text_bg_fixhigth"
        android:fontFamily="@font/montserrat_regular"
        android:paddingStart="10dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:minLines="1"
        android:maxLines="5"
        android:text="Haridwar"
        android:drawableEnd="@drawable/ic_arrow_down"
        android:editable="false"
        android:focusable="false"
        android:paddingEnd="20dp"/>


    <TextView
        android:fontFamily="@font/montserrat_regular"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/net_weight_"
        android:textColor="@color/textColor"
        android:textSize="14sp"
        android:textStyle="normal" />

    <EditText
        android:id="@+id/edtNetWeight"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"

        android:background="@drawable/edit_text_bg_fixhigth"
        android:fontFamily="@font/montserrat_regular"
        android:paddingStart="10dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:inputType="numberDecimal"
        android:paddingEnd="20dp"/>


    <com.bharuwa.sumadhu.custom.ElasticLayout
        android:id="@+id/btnSubmit"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/circular_btn_bg"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:gravity="center"
        android:layout_marginTop="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_medium"
            android:text="Submit"
            android:textColor="@color/white"
            android:textSize="@dimen/button_font_size" />

    </com.bharuwa.sumadhu.custom.ElasticLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>