<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:alpha=".3"
        android:background="@drawable/background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="6dp">

            <LinearLayout

                android:id="@+id/llSwitchLayout"
                android:layout_marginTop="10dp"
                android:layout_weight="3"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/txtTrader"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_gravity="center_vertical"
                    android:text="@string/trader"
                    android:layout_weight="1.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <com.kyleduo.switchbutton.SwitchButton
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:id="@+id/switch1"
                    android:checked="false"
                    app:kswThumbRadius="50dp"
                    app:kswBackColor="@color/skin_color"
                    app:kswTextExtra="15dp"
                    android:textSize="15sp"
                    android:fontFamily="@font/montserrat_medium"
                    app:kswThumbColor="@color/white"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/txtBeeKeeper"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/textColor_dim"
                    android:layout_gravity="center_vertical"
                    android:text="@string/beekeeper"
                    android:layout_weight="1.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="8dp"
                android:elevation="5dp"
                app:cardUseCompatPadding="true">

                <TextView

                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:background="@color/sky_blue"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="Summary"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"

                        android:orientation="vertical"
                        android:paddingStart="10dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:src="@drawable/total_order"
                            android:layout_gravity="center"
                            android:fontFamily="@font/montserrat_light"
                            android:textColor="@color/yellow"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/txtTotalOrder"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Total\nOrders"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/montserrat_medium"
                            android:textColor="@color/textcolorB"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <View
                        android:elevation="2dp"
                        android:layout_width="0.3dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:background="@color/gray" />

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:orientation="vertical"
                        android:paddingLeft="10dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:src="@drawable/total_shopkeeper"
                            android:layout_gravity="center"
                            android:fontFamily="@font/montserrat_light"
                            android:textColor="@color/yellow"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/txtTotalBeekeepers"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"

                            android:text="Total\nBeekeepers"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/montserrat_medium"
                            android:textColor="@color/textcolorB"
                            android:textSize="15sp" />

                    </LinearLayout>

                    <View
                        android:elevation="2dp"
                        android:layout_width="0.3dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:background="@color/gray" />

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:orientation="vertical"
                        android:paddingLeft="10dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:src="@drawable/order_supplied"
                            android:layout_gravity="center"
                            android:fontFamily="@font/montserrat_light"
                            android:textColor="@color/yellow"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/txtOrderSupplied"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Orders\nSupplied"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/montserrat_medium"
                            android:textColor="@color/textcolorB"
                            android:textSize="15sp" />

                    </LinearLayout>

                 <!--   <View
                        android:layout_width="0.3dp"
                        android:layout_height="70dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:background="@color/gray" />

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:orientation="vertical"
                        android:paddingLeft="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:fontFamily="@font/montserrat_light"
                            android:text="Full \nBoxes"
                            android:textColor="@color/black"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/textViewMyProduct"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="0"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/montserrat_medium"
                            android:textColor="@color/text_blue"
                            android:textSize="18sp" />

                    </LinearLayout>
-->
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="8dp">

                    <com.bharuwa.sumadhu.custom.ElasticLayout
                        android:id="@+id/layoutBuyHoney"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:background="@drawable/btn_rectangle_with_corner"
                            android:padding="10dp"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:src="@drawable/buy_hony" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingLeft="10dp"
                            android:layout_gravity="center"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="@string/buy_honey"
                            android:textStyle="bold"
                            android:layout_marginStart="15dp"
                            android:textColor="@color/textcolorB"
                            android:textSize="16sp" />

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:rotation="270"
                            android:background="@drawable/ic_arrow_down"
                            android:backgroundTint="@color/black"/>

                    </com.bharuwa.sumadhu.custom.ElasticLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="8dp">

                    <com.bharuwa.sumadhu.custom.ElasticLayout
                        android:id="@+id/layoutMyHoney"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:background="@drawable/btn_rectangle_with_corner"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"

                            android:padding="10dp"
                            android:src="@drawable/my_order" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingLeft="10dp"
                            android:layout_gravity="center"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="My Orders"
                            android:layout_marginStart="15dp"
                            android:textStyle="bold"
                            android:textColor="@color/textcolorB"
                            android:textSize="16sp" />

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:rotation="270"
                            android:background="@drawable/ic_arrow_down"
                            android:backgroundTint="@color/black"/>

                    </com.bharuwa.sumadhu.custom.ElasticLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="8dp">

                    <com.bharuwa.sumadhu.custom.ElasticLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:id="@+id/layoutMyNetwork"
                        android:orientation="horizontal">

                        <ImageView
                            android:background="@drawable/btn_rectangle_with_corner"

                            android:padding="10dp"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:src="@drawable/my_network"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingLeft="10dp"
                            android:layout_gravity="center"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="My Network"
                            android:layout_marginStart="15dp"
                            android:textStyle="bold"
                            android:textColor="@color/textcolorB"
                            android:textSize="16sp" />

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:rotation="270"
                            android:background="@drawable/ic_arrow_down"
                            android:backgroundTint="@color/black"/>
                    </com.bharuwa.sumadhu.custom.ElasticLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="8dp">

                    <com.bharuwa.sumadhu.custom.ElasticLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:id="@+id/layoutDispatch"
                        android:orientation="horizontal">

                        <ImageView
                            android:background="@drawable/btn_rectangle_with_corner"

                            android:padding="10dp"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_deliver"
                            app:tint="@color/white" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="15dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/montserrat_medium"
                            android:paddingLeft="10dp"
                            android:text="Ready To Dispatch"
                            android:textColor="@color/textcolorB"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:rotation="270"
                            android:background="@drawable/ic_arrow_down"
                            android:backgroundTint="@color/black"/>
                    </com.bharuwa.sumadhu.custom.ElasticLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="8dp">

                    <com.bharuwa.sumadhu.custom.ElasticLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:id="@+id/layoutLoadDispatch"
                        android:orientation="horizontal">

                        <ImageView
                            android:background="@drawable/btn_rectangle_with_corner"

                            android:padding="10dp"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_deliver"
                            app:tint="@color/white" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingLeft="10dp"
                            android:layout_gravity="center"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="Dispatch"
                            android:textStyle="bold"
                            android:layout_marginStart="15dp"
                            android:textColor="@color/textcolorB"
                            android:textSize="16sp" />

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:rotation="270"
                            android:background="@drawable/ic_arrow_down"
                            android:backgroundTint="@color/black"/>
                    </com.bharuwa.sumadhu.custom.ElasticLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</FrameLayout>

